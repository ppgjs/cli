{
  "name": "@ppgjs/cli",
  "version": "0.0.33",
  "description": "PpgJs's command line tools",
  "author": {
    "name": "BoycePan",
    "email": "pz886688@163.com",
    "url": "https://github.com/ppgjs"
  },
  "license": "MIT",
  "homepage": "https://github.com/ppgjs/cli",
  "repository": {
    "url": "https://github.com/ppgjs/cli.git"
  },
  "bugs": {
    "url": "https://github.com/ppgjs/cli/issues"
  },
  "publishConfig": {
    "registry": "https://registry.npmjs.org/"
  },
  "keywords": [
    "ppgjs",
    "ppg"
  ],
  "scripts": {
    "build": "unbuild",
    "dev": "unbuild --stub",
    "build-pkg": "pnpm -r --filter='./packages/*' run build",
    "stub": "pnpm -r run stub",
    "lint": "eslint --fix -c .eslintrc --ext .ts ./",
    "format": "soy prettier-write",
    "commit": "soy git-commit",
    "cleanup": "soy cleanup",
    "ncu": "soy ncu",
    "publish-pkg": "pnpm -r publish --access public",
    "typecheck": "tsc --noEmit",
    "release": "pnpm build && npx ppg release && npm publish",
    "test": "node dist/index.cjs --help"
  },
  "bin": {
    "ppg": "dist/index.cjs"
  },
  "type": "module",
  "exports": {
    ".": {
      "import": "./dist/index.mjs",
      "require": "./dist/index.cjs",
      "types": "./dist/index.d.ts"
    }
  },
  "main": "./dist/index.cjs",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "files": [
    "dist"
  ],
  "devDependencies": {
    "@ppgjs/cli": "link:",
    "@types/archiver": "^6.0.2",
    "@types/ejs": "^3.1.3",
    "@types/fs-extra": "^11.0.2",
    "@types/node": "^20.8.3",
    "@types/ping": "^0.4.3",
    "eslint": "^8.51.0",
    "eslint-config-soybeanjs": "^0.5.7",
    "tsx": "^3.13.0",
    "typescript": "^5.2.2",
    "unbuild": "^2.0.0"
  },
  "dependencies": {
    "@types/semver": "^7.5.8",
    "archiver": "^7.0.1",
    "axios": "^1.6.8",
    "bumpp": "^9.2.0",
    "c12": "^1.10.0",
    "cac": "^6.7.14",
    "cli-spinners": "^2.9.1",
    "dayjs": "^1.11.10",
    "ejs": "^3.1.9",
    "enquirer": "^2.4.1",
    "execa": "^8.0.1",
    "fast-glob": "^3.3.1",
    "form-data": "^4.0.0",
    "fs-extra": "^11.1.1",
    "kolorist": "^1.8.0",
    "log-update": "^5.0.1",
    "open": "^9.1.0",
    "ora": "^7.0.1",
    "ping": "^0.4.4",
    "pkg-types": "^1.0.3",
    "prettier": "^3.0.3",
    "semver": "^7.6.3",
    "simple-git": "^3.20.0"
  },
  "pnpm": {
    "patchedDependencies": {
      "c12@1.10.0": "patches/c12@1.10.0.patch"
    }
  }
}
