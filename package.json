{
  "name": "@ppgjs/cli",
  "version": "0.0.5",
  "description": "一个好用的cli",
  "scripts": {
    "build": "unbuild",
    "dev": "unbuild --stub",
    "build-pkg": "pnpm -r --filter='./packages/*' run build",
    "stub": "pnpm -r run stub",
    "lint": "eslint --fix -c .eslintrc --ext .ts ./",
    "format": "soy prettier-write",
    "commit": "soy git-commit",
    "cleanup": "soy cleanup",
    "ncu": "soy ncu",
    "publish-pkg": "pnpm -r publish --access public",
    "typecheck": "tsc --noEmit",
    "release": "pnpm build && npx ppg release && npm publish",
    "test": "node dist/index.cjs --help"
  },
  "bin": {
    "ppg": "dist/index.cjs"
  },
  "type": "module",
  "exports": {
    ".": {
      "import": "./dist/index.mjs",
      "require": "./dist/index.cjs",
      "types": "./dist/index.d.ts"
    }
  },
  "main": "./dist/index.cjs",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "files": [
    "dist"
  ],
  "keywords": [],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "@ppgjs/cli": "link:",
    "@types/ejs": "^3.1.3",
    "@types/fs-extra": "^11.0.2",
    "@types/node": "^20.8.3",
    "eslint": "^8.51.0",
    "eslint-config-soybeanjs": "^0.5.7",
    "tsx": "^3.13.0",
    "typescript": "^5.2.2",
    "unbuild": "^2.0.0"
  },
  "dependencies": {
    "bumpp": "^9.2.0",
    "c12": "^1.4.2",
    "cac": "^6.7.14",
    "cli-spinners": "^2.9.1",
    "ejs": "^3.1.9",
    "enquirer": "^2.4.1",
    "execa": "^8.0.1",
    "fast-glob": "^3.3.1",
    "fs-extra": "^11.1.1",
    "kolorist": "^1.8.0",
    "log-update": "^5.0.1",
    "open": "^9.1.0",
    "ora": "^7.0.1",
    "pkg-types": "^1.0.3",
    "prettier": "^3.0.3",
    "simple-git": "^3.20.0"
  }
}
